@model Slider
@{
    ViewData["Title"] = "Create";
}
<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Sliders</h1>
        <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            Create
        </a>
    </div>
    <div class="row">
        <div class="col-md-8 mx-auto">
            <form class="user" asp-action="create" method="post">
                <div class="form-group">
                    <label for="nameInput">Title1</label>
                    <input asp-for="Title1" class="form-control" id="Title1Input" placeholder="Enter Title1 here..">
                    <span class="text-danger" asp-validation-for="Title1"></span>
                    <label for="nameInput">Title2</label>
                    <input asp-for="Title2" class="form-control" id="Title2Input" placeholder="Enter Title2 here..">
                    <span class="text-danger" asp-validation-for="Title2"></span>
                    <label for="nameInput">BtnText</label>
                    <input asp-for="BtnText" class="form-control" id="BtnTextInput" placeholder="Enter BtnText here..">
                    <span class="text-danger" asp-validation-for="BtnText"></span>
                    <label for="nameInput">BtnUrl</label>
                    <input asp-for="BtnUrl" class="form-control" id="BtnUrlInput" placeholder="Enter BtnUrl here..">
                    <span class="text-danger" asp-validation-for="BtnUrl"></span>
                    <label for="nameInput">Image</label>
                    <input asp-for="Image" class="form-control" id="ImageInput" placeholder="Enter Image name here..">
                    <span class="text-danger" asp-validation-for="Image"></span>
                    <label for="nameInput">Description</label>
                    <input asp-for="Desc" class="form-control" id="ImageInput" placeholder="Enter Desc name here..">
                    <span class="text-danger" asp-validation-for="Desc"></span>
                    <label for="nameInput">Order</label>
                    <input asp-for="Order" class="form-control" id="OrderInput" placeholder="Enter Order here..">
                    <span class="text-danger" asp-validation-for="Order"></span>
                </div>
                <button class="btn btn-primary" type="submit">
                    Create Author
                </button>
            </form>
        </div>
    </div>
</div>
